{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>

    <a class="btn btn-success m-3" href="{{ path('new_entreprise')}}">Ajouter une entreprise</a> <br>
        {% for entreprise in entreprises %}
            <a href="{{path('show_entreprise', {'id': entreprise.id})}}">{{entreprise}}</a>
            <a class="btn btn-primary mx-3" href="{{ path('edit_entreprise', {'id': entreprise.id})}}">Edit</a>
            <a class="btn btn-danger mx-3" href="{{ path('delete_entreprise', {'id': entreprise.id})}}">Supprimer</a>
            <br> <br> 
        {% endfor %}
    
  
{% endblock %}
