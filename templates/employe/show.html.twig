{% extends 'base.html.twig' %}

{% block title %}Détail d'un employé{% endblock %}

{% block body %}
    <h1>Détail d'un employé</h1>

    <h2>{{employe}}</h2>

    Prenom : {{employe.prenom}} <br><br>
    Nom : {{employe.nom}} <br><br>
    Age : {{employe.age}} <br><br>
    Date de naissance : {{employe.dateNaissance|date('d-m-Y')}} <br><br>
    employé chez : <a href="{{path('show_entreprise', {'id': employe.entreprise.id})}}">({{employe.entreprise}})</a> <br><br>
    Date d'empbauche : {{employe.dateEmbauche|date('d-m-Y')}} <br><br>
    ville : {% if employe.ville %}  {{employe.ville}} {% else %} <span>Ville inconnue</span> {% endif %} 
    
{% endblock %}